<%- include('partials/header') %>

<div class="container">
  <h1 class="mb-4">My Notes</h1>
  
  <div class="row mb-5">
    <% if(notes.length > 0) { %>
      <% notes.forEach(note => { %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100 shadow-sm hover-shadow border-0">
            <div class="card-body">
              <h3 class="h5 card-title"><%= note.title %></h3>
              <p class="card-subtitle mb-3 text-muted small">
                Last updated: <%= note.updatedAt.toLocaleDateString() %>
              </p>
              <div class="card-text mb-3">
                <p><%= note.content.length > 100 ? note.content.substring(0, 100) + '...' : note.content %></p>
              </div>
            </div>
            <div class="card-footer bg-white border-0 d-flex justify-content-between">
              <a href="/notes/<%= note._id %>" class="btn btn-sm btn-outline-primary">Edit</a>
              <form action="/notes/<%= note._id %>?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12">
        <div class="alert alert-info">
          <p class="mb-0">You have no notes yet. Create your first note below!</p>
        </div>
      </div>
    <% } %>
  </div>
  
  <div class="card shadow-sm border-0 mb-5" id="create">
    <div class="card-body p-4">
      <h2 class="h4 mb-3">Create New Note</h2>
      <form action="/notes" method="POST">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" class="form-control" id="title" name="title" required>
        </div>
        <div class="mb-3">
          <label for="content" class="form-label">Content</label>
          <textarea class="form-control" id="content" name="content" rows="6" required></textarea>
        </div>
        <div class="mb-3">
          <label for="input-custom-dropdown" class="form-label">Tag</label>
          <input name="input-custom-dropdown" class="tagify--custom-dropdown form-control" placeholder="Add tags" value="work, travel, school">
        </div>
        <button type="submit" class="btn btn-primary">Save Note</button>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') %>