<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PostIT</title>
    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- bootstrap icons -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <!-- tagify imports -->
    <script src="https://cdn.jsdelivr.net/npm/@yaireo/tagify"></script>
    <script src="https://cdn.jsdelivr.net/npm/@yaireo/tagify/dist/tagify.polyfills.min.js"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/@yaireo/tagify/dist/tagify.css"
      rel="stylesheet"
      type="text/css"
    />
    <!-- Choices.js CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css"
    />
    <!-- Choices.js JS -->
    <script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>
    <!-- font family for Inter (google) -->
    <link
      href="https://fonts.googleapis.com/css2?family=Inter&display=swap"
      rel="stylesheet"
    />
      <script>
        (function () {
          // ignore js ide warning; irrelevant
          const prefs = <%- JSON.stringify(user?.userProfile?.preferences || { theme: 'light', fontSize: 1, primaryColor: '#9b5de5' , fontFamily: 'system-ui', timeZone: 'UTC', dateFormat: 'YYYY-MM-DD'}) %>;
          window.__USER_PREFERENCES__ = prefs;
          document.documentElement.setAttribute('data-bs-theme', prefs.theme);
          document.documentElement.style.setProperty('--user-font-size', prefs.fontSize + 'rem');
          document.documentElement.style.setProperty('--color-primary', prefs.primaryColor);
          document.documentElement.style.setProperty('--user-font-family', prefs.fontFamily);
        })();
      </script>
    <link rel="stylesheet" href="/css/style.css" />
    <script src="/js/main.js" defer></script>
  </head>
  <body class="pt-4">
    <header>
      <nav class="navbar navbar-expand-lg bg-body-tertiary shadow-sm fixed-top">
        <div class="container">
          <a class="navbar-brand" href="/" onclick="showSpinner()">
            <h1 class="h4 m-0 text-primary">PostIT</h1>
          </a>
          <% if(typeof user !== 'undefined') { %>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto align-items-center">
              <!-- only show toggle icon on desktop -->
              <li class="nav-item d-flex d-none d-sm-block">
                <button
                  onclick="toggleTheme()"
                  class="btn btn-sm nav-link d-flex gap-2"
                >
                  <i class="bi bi-circle-half"></i>
                </button>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/dashboard" onclick="showSpinner()">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/notes" onclick="showSpinner()">Notes</a>
              </li>
              <li class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle d-flex align-items-center"
                  href="#"
                  role="button"
                  data-bs-toggle="dropdown"
                >
                  <img
                    src="<%= user.image %>"
                    alt="<%= user.userProfile?.displayName %>"
                    class="rounded-circle me-2"
                    width="30"
                    height="30"
                  />
                  <span><%= user.userProfile?.displayName %></span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                  <li>
                    <a href="/user/account" class="dropdown-item" onclick="showSpinner()">Account</a>
                  </li>
                  <li>
                    <a href="/auth/logout" class="dropdown-item" onclick="showSpinner()">Logout</a>
                  </li>
                </ul>
              </li>
              <!-- only show toggle icon with text on mobile -->
              <li class="nav-item d-flex d-block d-sm-none">
                <button
                  onclick="toggleTheme()"
                  class="btn btn-sm nav-link d-flex gap-2"
                >
                  <i class="bi bi-circle-half"></i>
                  <span class="d-block d-sm-none">Toggle theme</span>
                </button>
              </li>
            </ul>
          </div>
          <% } %>
        </div>
      </nav>
    </header>
    <main class="py-4">
      <%- include('../partials/spinner') %>
    </main>
  </body>
</html>
