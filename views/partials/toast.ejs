
<div class="toast-container position-fixed p-3">
  <div
    id="liveToast"
    class="liveToast toast align-items-center text-bg-primary border-0"
    role="alert"
    aria-live="assertive"
    aria-atomic="true"
    <% if (flash?.message) { %> data-show-toast="true" <% } %>
  >
    <div class="d-flex">
      <div class="toast-body"><%= flash?.message%></div>
      <button
        type="button"
        class="btn-close btn-close-white me-2 m-auto"
        data-bs-dismiss="toast"
        aria-label="Close"
      ></button>
    </div>
  </div>
</div>