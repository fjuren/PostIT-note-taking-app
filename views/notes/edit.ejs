<%- include('../partials/header') %>

<div class="container">
  <h1 class="mb-4">Edit Note</h1>
  
  <div class="card shadow-sm border-0 mb-5">
    <div class="card-body p-4">
      <form action="/notes/<%= note._id %>?_method=PUT" method="POST">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" class="form-control" id="title" name="title" value="<%= note.title %>" required>
        </div>
        <div class="mb-3">
          <label for="content" class="form-label">Content</label>
          <textarea class="form-control" id="content" name="content" rows="10" required><%= note.content %></textarea>
        </div>
        <div class="d-flex gap-2">
          <button type="submit" class="btn btn-primary">Update Note</button>
          <a href="/notes" class="btn btn-outline-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>